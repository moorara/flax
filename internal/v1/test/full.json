{
  "config": {
    "httpPort": 8080,
    "httpsPort": 8443
  },

  "http": [
    {
      "methods": [ "GET" ],
      "path": "/me",
      "queries": {
        "tenantId": "\\w+"
      },
      "headers": {
        "Authorization": "Bearer .*"
      },
      "response": {
        "delay": "10ms",
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "id": "5da8349a-0707-4064-8fad-74cedb48a8fc",
          "name": "John Doe",
          "email": "john.doe@example.com"
        }
      }
    },
    {
      "methods": [ "POST", "PUT" ],
      "path": "/v1/sessions",
      "prefix": true,
      "queries": {
        "tenantId": "\\w+"
      },
      "headers": {
        "Accept": "application/json",
        "Content-Type": "application/json"
      },
      "forward": {
        "delay": "10ms",
        "to": "http://session-manager:8800/api/v1/sessions",
        "headers": {
          "Referer": "flax"
        }
      }
    }
  ],

  "rest": [
    {
      "basePath": "/api/v1/cars",
      "store": {
        "objects": [
          { "id": "ad2bd67b-172e-4778-a8a3-7cfb626685b9", "make": "Mazda", "model": "CX-5" },
          { "id": "26ee9c87-fdbb-48cf-be0a-add9a3d87189", "make": "Hyundai", "model": "Sonata" }
        ]
      }
    },
    {
      "basePath": "/api/v1/teams",
      "headers": {
        "Authorization": "Bearer .*"
      },
      "response": {
        "delay": "10ms",
        "getStatus": 206,
        "postStatus": 202,
        "putStatus": 202,
        "patchStatus": 202,
        "deleteStatus": 202,
        "listProperty": "data",
        "headers": {
          "Content-Type": "application/json"
        }
      },
      "store": {
        "identifier": "_id",
        "objects": [
          { "_id": "d93ce179-50f7-469e-bb36-1b3746145f00", "name": "Back-end", "tags": [ "cloud", "go" ] },
          { "_id": "8cd6ef6c-2095-4c75-bc66-6f38e785299d", "name": "Front-end", "tags": [ "react", "redux" ] }
        ]
      }
    }
  ]
}
